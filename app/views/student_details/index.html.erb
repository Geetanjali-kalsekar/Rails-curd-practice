<style>
  * {
    background-color: lightpink;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  h1 {
    color: black;
    text-align: center;
    font-family: sans-serif;
    font-size: 50px;
    font-weight: 700;
    text-shadow: 3px 3px 10px white;
    margin-top: 20px;
  }

  .nav {
    text-align: center;
    margin: 20px 0;
  }

  .btn-primary {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-family: sans-serif;
    font-size: 16px;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }

  table {
    width: 60%;
    border-collapse: collapse;
    margin: 20px auto;
    background-color: white;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border-radius: 10px;
    overflow: hidden;
  }

  th,
  td {
    border: 1px solid #ddd;
    padding: 10px;
    font-family: sans-serif;
    font-size: 16px;
    text-align: center;
  }

  th {
    background-color: #f4f4f9;
    color: black;
    font-weight: bold;
  }

  tr:hover {
    background-color: #f9e2e2;
  }
</style>

<h1>All Student Details</h1>

<div class="nav">
  <a href="<%= new_student_detail_path %>" class="btn-primary">Login</a>
</div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>Course</th>
      <th>City</th>
    </tr>
  </thead>
  <tbody>
    <% @st_details.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.st_name %></td>
        <td><%= student.st_age %></td>
        <td><%= student.st_course %></td>
        <td><%= student.st_city %></td>
      </tr>
    <% end %>
  </tbody>
</table>
