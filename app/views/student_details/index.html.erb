<style>
	*{
		background-color: lightpink;
	}
	h1
	{
		color:black;
		text-align: center;
		font-family: sans-serif;
		font-size: 50px;
		font-weight: 700;
	    text-shadow: 3px 3px 10px white;
	}

	table{
		text-align: center;
		margin-left:40%;
		margin-top:3%;
	}
</style>
<h1>All Student Details</h1>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Age</th>
      <th>Course</th>
      <th>City</th>
    
    </tr>
  </thead>
  <tbody>
    <% @st_details.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.st_name %></td>
        <td><%= student.st_age %></td>
        <td><%= student.st_course %></td>
        <td><%= student.st_city %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>


